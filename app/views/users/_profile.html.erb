
	<h2>User info</h2>
	<table class="table">
		<tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>

		<tr>
			<th>name</th>
			<th><%= user.name %></th>
		</tr>
	
		<tr>
			<th>introduction</th>
			<th><%= user.introduction %></th>
		</tr>
	</table>
	
	<div class="text-center">
		<%= link_to '', edit_user_path(user), class: 'mdbtn btn-outline-secondary btn-block fas fa-user-cog' %>
	</div>
